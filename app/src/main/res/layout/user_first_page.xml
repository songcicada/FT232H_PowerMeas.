<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:stretchColumns="*">

            <TableRow android:padding="5dp">

                <FrameLayout
                    android:layout_width="25dp"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btn_start_UserMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/btn_start_rect"
                        android:gravity="center"
                        android:onClick="btnStart_UserMode"
                        android:text="시작"
                        android:textColor="#E6E6FA"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/btn_stop_UserMode"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/btn_stop_rect"
                        android:gravity="center"
                        android:onClick="btnStop_UserMode"
                        android:text="중지"
                        android:textColor="#E6E6FA"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:visibility="invisible" />
                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="PS1"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="PS2"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="PS3"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="OCP"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow android:padding="5dp">

                <TextView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Volt"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/PSE1_V"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/table_border"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/PSE2_V"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/table_border"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/PSE3_V"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/table_border"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ocp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:padding="5dp" />

            </TableRow>

            <TableRow android:padding="5dp">

                <TextView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Curr"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/PSE1_I"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/table_border"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/PSE2_I"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/table_border"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/PSE3_I"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/table_border"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/PS3_OCP_Volt"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/table_border"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow android:padding="5dp">

                <TextView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Peak"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/PSE1_I_PEAK"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/table_border"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/PSE2_I_PEAK"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/table_border"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/PSE3_I_PEAK"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/table_border"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/Peak"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:padding="5dp" />

            </TableRow>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/EnginnerMode_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_modechange_rect"
                    android:gravity="center"
                    android:text="  엔지니어 모드 전환  "
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:stretchColumns="*">

            <EditText
                android:id="@+id/Email_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="#FFFAFA	"
                android:gravity="center"
                android:hint="Email@Email.com"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TableRow android:padding="5dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/Log_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/bg_modechange_rect"
                        android:gravity="center"
                        android:onClick="btnLog_Save_User"
                        android:text="로그 저장"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/Email_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/bg_modechange_rect"
                        android:gravity="center"
                        android:text="이메일 보내기"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:visibility="invisible" />
                </FrameLayout>
            </TableRow>
        </TableLayout>

        <TextView
            android:id="@+id/measureLog"
            style="@style/Widget.AppCompat.AutoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="9dp"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:textSize="10dp"
            android:typeface="normal"
            android:visibility="visible" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="btnClear"
            android:id="@+id/btn_Clear_UserMode"
            android:padding="10dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:gravity="center"
            android:text="Clear"
            android:background="@drawable/bg_clear_rect"
            android:visibility="visible"
            />
    </LinearLayout>

</LinearLayout>






