<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TableLayout
        android:id="@+id/PSE_value_Table"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight = "1">


        <ImageView
                android:id="@+id/ocp"
                android:layout_width="35dp"
                android:layout_height="60dp"
                android:scaleType="center" />

            <TextView
                android:layout_width="35dp"
                android:layout_height="60dp"
                android:fontFamily="@font/gmarketsansbold"
                android:gravity="center"
                android:text="1"
                android:textSize="25sp" />

            <TextView
                android:layout_width="35dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="2"
                android:textSize="25sp"
                android:fontFamily="@font/gmarketsansbold"/>
            <TextView
                android:layout_width="35dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="3"
                android:textSize="25sp"
                android:fontFamily="@font/gmarketsansbold"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight = "1">


        <TextView
                android:text="PS_I"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textSize="15sp"
                android:fontFamily="@font/ridi"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/PS1_I"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:paddingRight="10dp"
                android:fontFamily="@font/gmarketsanslight"
                android:gravity="center_vertical|right"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/PS2_I"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical|right"
                android:textSize="15sp"
                android:fontFamily="@font/gmarketsanslight" />
            <TextView
                android:id="@+id/PS3_I"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical|right"
                android:textSize="15sp"
                android:fontFamily="@font/gmarketsanslight" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight = "1">


        <TextView
                android:text="PSE_I"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textSize="15sp"
                android:fontFamily="@font/ridi"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/PSE1_I"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:gravity="center_vertical|right"
                android:paddingRight="10dp"
                android:textSize="15sp"
                android:fontFamily="@font/gmarketsanslight" />

            <TextView
                android:id="@+id/PSE2_I"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:gravity="center_vertical|right"
                android:paddingRight="10dp"
                android:textSize="15sp"
                android:fontFamily="@font/gmarketsanslight" />

            <TextView
                android:id="@+id/PSE3_I"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:gravity="center_vertical|right"
                android:paddingRight="10dp"
                android:textSize="15sp"
                android:fontFamily="@font/gmarketsanslight" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight = "1">

        <TextView
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="PSE_V"
                android:textSize="15sp"
                android:fontFamily="@font/ridi"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/PSE1_V"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:gravity="center_vertical|right"
                android:paddingRight="10dp"
                android:textSize="15sp"
                android:fontFamily="@font/gmarketsanslight" />


            <TextView
                android:id="@+id/PSE2_V"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:gravity="center_vertical|right"
                android:paddingRight="10dp"
                android:textSize="15sp"
                android:fontFamily="@font/gmarketsanslight" />

            <TextView
                android:id="@+id/PSE3_V"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:gravity="center_vertical|right"
                android:paddingRight="10dp"
                android:textSize="15sp"
                android:fontFamily="@font/gmarketsanslight" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight = "1">

        <TextView
                android:text="OCP"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textSize="15sp"
                android:fontFamily="@font/ridi"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/PS3_OCP"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:gravity="center_vertical|right"
                android:paddingRight="10dp"
                android:textSize="15sp"
                android:fontFamily="@font/gmarketsanslight" />

            <TextView
                android:text="PS3_V"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textSize="15sp"
                android:fontFamily="@font/ridi"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/PS3_V"
                android:layout_width="35dp"
                android:layout_height="40dp"
                android:gravity="center_vertical|right"
                android:paddingRight="10dp"
                android:textSize="15sp"
                android:fontFamily="@font/gmarketsanslight" />

        </TableRow>

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>